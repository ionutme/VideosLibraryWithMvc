@using Sticker.Models
@model List<VideoViewModel>

@{
    ViewBag.Title = "Videos DataBase";
}

<div class="jumbotron">
    <h2>@ViewBag.Title</h2>
</div>

<form method="get">
    <input type="search" name="filterTerm" class="form-control" style="display: inline"/>
    <input type="submit" class="btn" value="search"/>
    or @Html.ActionLink("add video", "Add")
</form>

<br/>

<table>
    <thead>
        <tr><td>name</td><td class="link-description">description</td></tr>
    </thead>
    <tbody>
        @foreach (VideoViewModel video in Model)
        {
            <tr>
                <td>
                    <a href="https://@video.Link">@video.Name</a>
                </td>
                <td class="link-description">
                    @video.Description
                </td>
            </tr>
        }
    </tbody>
</table>